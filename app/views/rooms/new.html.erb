<h3>新規ルーム登録</h3>
<%= render "devise/shared/error" , obj: @room %>
<div class="box">
  <div class="box-inner">
  <%= form_with model: @room, local: true do |r| %>
    <table>
      <tr>
        <th>
          <%= r.label :room_name ,"ルームネーム" %>
        </th>
        <td>
          <div class="box-email">
            <%= r.text_field :room_name %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <%= r.label :address ,"場所" %>
        </th>
        <td>
          <div class="box-email">
            <%= r.text_field :address %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <%= r.label :room_introduction ,"ルーム紹介" %>
        </th>
        <td>
          <div class="box-introduction">
            <%= r.text_area :room_introduction %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <%= r.label :charge ,"料金/日" %>
        </th>
        <td>
          <div class="box-email">
            <%= r.text_field :charge %>
          </div>
        </td>
      </tr>
      <th>
        <%= r.label :avatar, "ルーム画像" %>
      </th>
      <td>
        <%= r.file_field :avatar %>
      </td>
    </table>
    <%= r.hidden_field :user_id, value: current_user.id %>
    <div class="box-login">
      <%= r.submit "登録完了する" %>
    </div>
        <% end %>
  </div>
</div>

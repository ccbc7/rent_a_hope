<%= render "devise/shared/error" , obj: @room %>
<div class="box">
  <div class="box-inner">
    <%= form_with model: @room do |f| %>
      <table>
        <tr>
          <th>
            <%= f.label :room_name ,"ルーム名" %>
          </th>

          <td>
            <div class="box-email">
              <%= f.text_field :room_name %>
            </div>
          </td>
        </tr>

        <tr>
            <th>
              <%= f.label :room_introduction ,"ルーム紹介" %>
            </th>
            <td>
              <div class="box-introduction">
                <%= f.text_area :room_introduction%>
              </div>
              </td>
        </tr>
        <tr>
          <th>
            <%= f.label :adress ,"住所" %>
          </th>
          <td>
              <div class="box-email">
              <%= f.text_field :adress %>
            </div>
          </td>
        </tr>

        <tr>
          <th>
            <%= f.label :charge ,"料金" %>
          </th>
          <td>
            <div class="box-email">
              <%= f.text_field :charge %>
            </div>
          </td>
        </tr>


        <tr>
          <th>
            <%= f.label :room_image ,"ルーム画像" %>
          </th>
          <td>
            <%= f.file_field :room_image %><br>
          </td>
        </tr>
      </table>

      <div>
        <br>
        <div class="box-login">
          <p>
            <%= f.submit "登録完了する" %>
          </p>
        </div>
        <p>
          <%= link_to "Topに戻る", root_path  %>
        </p>
      </div>
    <% end %>
  </div>
</div>


<div class="box">
  <h2>プロフィール</h2>
  <div class="box-inner">
    <div class="profile_img">
      <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar.variant(resize: '300x300'), class:"one" %>
        <% end %>
    </div>

    <table>
        <tr>
          <th>ユーザーネーム</th>
          <td><%= @user.username %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      </div>
        <div class="link">
          <p>
            <%= link_to "プロフィールを編集する" , edit_user_path %>
          </p>
          <p>
            <%= link_to "アカウントを編集する" , "/users/edit" %>
          </p>



  </div>
</div>
